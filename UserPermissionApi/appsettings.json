{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=UserPermission;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "ElasticsearchSettings": {
    "Uri": "http://localhost:7101", // La URL de tu servidor Elasticsearch
    "DefaultIndex": "permisos" // El nombre de tu índice Elasticsearch
  },
  "KafkaConfiguration": {
    "BootstrapServers": "localhost:9092", // Dirección y puerto de servidores de Kafka.
    "TopicName": "user-permissions" // Nombre de topic.
  }
}
